<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    tools:context="com.sl56.lis.androidapp.ClearanceActivity">

    <EditText
        android:id="@+id/et_referencenumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="请输入单号"
        android:textSize="25dip"
        android:singleLine="true"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tv_Status"
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="单号优化状态："
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_referencenumber" />
    <Button
        android:id="@+id/btn_Search"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="查询"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Status" />

    <Button
        android:id="@+id/btn_mark_PackagingOptimization"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="标识优化"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Search" />

    <Button
        android:id="@+id/btn_cancel_PackagingOptimization"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="取消优化"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_mark_PackagingOptimization" />

</android.support.constraint.ConstraintLayout>
