<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    android:padding="3dp"
    android:orientation="vertical"
    tools:context="com.sl56.lis.androidapp.PalletActivity">

    <EditText
        android:id="@+id/etBarCode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/checkgoods_referencenumber"
        android:hint="请输入单号"
        android:singleLine="true"
        android:text="JJD014600007655625254" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/linecolor"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:background="@drawable/checkgoods_referencenumber"
            android:textSize="25dp" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/spinner_palletcategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/checkgoods_referencenumber"
            android:textSize="20dp" />
    </LinearLayout>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner_palletno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/checkgoods_referencenumber"
        android:textSize="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.bigmercu.cBox.CheckBox
            android:id="@+id/cb_customs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:color_after="@color/checkboxbordercolor"
            app:color_before="@color/red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单独报关"
            android:textSize="25dp" />

        <com.bigmercu.cBox.CheckBox
            android:id="@+id/cb_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:color_after="@color/checkboxbordercolor"
            app:color_before="@color/red" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电池"
            android:textSize="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.bigmercu.cBox.CheckBox
            android:id="@+id/cb_epm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:color_after="@color/checkboxbordercolor"
            app:color_before="@color/red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防疫物资"
            android:textSize="25dp" />


    </LinearLayout>
    <TextView
        android:id="@+id/tv_pieceinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="20dp"
        android:textColor="@color/red"
        android:background="@color/white"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/linecolor"/>

    <ListView
        android:id="@+id/lv_shipments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/checkgoods_referencenumber"></ListView>
</LinearLayout>
