<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".PutawayActivity">
    <EditText
        android:id="@+id/etCargoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="此处扫描容器条码"
        android:textSize="25dip"
        android:singleLine="true"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tvCargoContainer"
        app:layout_constraintTop_toBottomOf="@id/etCargoContainer"
        android:textSize="25dip"
        android:textColor="@color/blue"
        android:layout_marginTop="10dp"
        android:text="当前容器"
        android:padding="10dp"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_width="0dp"
        android:id="@+id/tvActionType"
        app:layout_constraintTop_toBottomOf="@id/tvCargoContainer"
        android:textSize="25dip"
        android:layout_marginTop="10dp"
        android:text="操作模式"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
    </TextView>
    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spActionType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="25dip"
        android:layout_marginTop="7dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvActionType"
        app:layout_constraintTop_toBottomOf="@id/tvCargoContainer"
        />
    <EditText
        android:id="@+id/etReceiveGoodsDetailNo"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="此处扫描货物条码"
        android:textSize="25dip"
        android:singleLine="true"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spActionType"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tvResult"
        app:layout_constraintTop_toBottomOf="@id/etReceiveGoodsDetailNo"
        android:textSize="25dip"
        android:textColor="@color/red"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content">

    </TextView>
</android.support.constraint.ConstraintLayout>