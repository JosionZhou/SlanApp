<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    tools:context="com.sl56.lis.androidapp.ArchiveScanActivity">

    <EditText
        android:id="@+id/et_referencenumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="请输入单号"
        android:textSize="25dip"
        android:singleLine="true"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:id="@+id/tv_clearanceinfo"
        android:layout_width="0dp"
        android:layout_height="490dp"
        android:textSize="40dip"
        android:padding="3dp"
        android:textColor="@color/red"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:text="注意！当前操作为：扫描底单"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_referencenumber"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
